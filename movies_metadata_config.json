{
  "raw_dataset_path": "./data/raw/movies_metadata.parquet",
  "clean_dataset_path": "./data/cleaned/movies_metadata.parquet",
  "plot_directory_path": "plots",
  "attributes": {
    "vote_average": {
      "type": "real"
    },
    "vote_count": {
      "type": "real"
    },
    "status": {
      "type": "nomial"
    },
    "revenue": {
      "type": "real"
    },
    "runtime": {
      "type": "real"
    },
    "budget": {
      "type": "real"
    },
    "adult": {
      "type": "nomial"
    },
    "popularity": {
      "type": "real"
    },
    "genres": {
      "type": "nomial"
    }
  },
  "cleaning": [
    {
      "attribute": "vote_average",
      "missing_strategy": "replace_missing_with_mean"
    },
    {
      "attribute": "year",
      "missing_strategy": "replace_missing_with_median"
    },
    {
      "attribute": "views",
      "missing_strategy": "replace_missing_with_median"
    }
  ],
  "plotting": [
    {
      "action": "make_density_plot",
      "attribute": "revenue",
      "name": "RevenueDensityPlot"
    },
    {
      "action": "make_barplot",
      "attribute": "revenue",
      "name": "RevenueHistogram",
      "kwargs": {
        "name": "Revenuse"
      }
    }
  ]
}

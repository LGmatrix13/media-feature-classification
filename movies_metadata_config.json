{
  "raw_dataset_path": "./data/raw/movies_metadata.parquet",
  "clean_dataset_path": "./data/cleaned/movies_metadata.parquet",
  "plot_directory_path": "plots",
  "attributes": {
    "title": {
      "type": "nominal"
    },
    "vote_average": {
      "type": "real"
    },
    "vote_count": {
      "type": "real"
    },
    "status": {
      "type": "nominal"
    },
    "release_date": {
      "type": "nominal"
    },
    "revenue": {
      "type": "real"
    },
    "runtime": {
      "type": "real"
    },
    "adult": {
      "type": "nominal"
    },
    "budget": {
      "type": "real"
    },
    "popularity": {
      "type": "real"
    },
    "genres": {
      "type": "nominal"
    },
    "production_companies": {
      "type": "nominal"
    },
    "production_countries": {
      "type": "nominal"
    },
    "keywords": {
      "type": "nominal"
    }
  },
  "cleaning": [
    {
      "attribute": "title",
      "missing_strategy": "remove"
    },
    {
      "attribute": "vote_average",
      "missing_strategy": "replace_missing_with_mean"
    },
    {
      "attribute": "vote_count",
      "missing_strategy": "replace_missing_with_mean"
    },
    {
      "attribute": "revenue",
      "missing_strategy": "replace_missing_with_mean"
    },
    {
      "attribute": "runtime",
      "missing_strategy": "replace_missing_with_mean"
    },
    {
      "attribute": "budget",
      "missing_strategy": "replace_missing_with_mean"
    },
    {
      "attribute": "popularity",
      "missing_strategy": "replace_missing_with_mean"
    }
  ],
  "transforming": [
    {
      "action": "make_mean_bins",
      "attribute": "vote_count",
      "args": ["freq", 5]
    },
    {
      "action": "make_mean_bins",
      "attribute": "vote_average",
      "args": ["freq", 5]
    },
    {
      "action": "make_mean_bins",
      "attribute": "revenue",
      "args": ["freq", 10]
    },
    {
      "action": "make_mean_bins",
      "attribute": "budget",
      "args": ["freq", 10]
    },
    {
      "action": "make_mean_bins",
      "attribute": "popularity",
      "args": ["freq", 5]
    }
  ],
  "plotting": [
    {
      "action": "make_density_plot",
      "attribute": "vote_average",
      "name": "RevenueDensityPlot"
    },
    {
      "action": "make_density_plot",
      "attribute": "vote_average",
      "name": "VoteAverageDensityPlot"
    },
    {
      "action": "make_density_plot",
      "attribute": "vote_average",
      "name": "VoteAverageDensity"
    },
    {
      "action": "make_density_plot",
      "attribute": "vote_count",
      "name": "VoteCountDensity"
    },
    {
      "action": "make_barplot",
      "attribute": "status",
      "name": "StatusHistogram",
      "kwargs": {
        "name": "Status"
      }
    }
  ]
}
